# =============================================================================
# Example Vault File for Sensitive Variables
# =============================================================================
#
# INSTRUCTIONS:
# 1. Copy this file to vault.yml:
#    cp vault.yml.example vault.yml
#
# 2. Edit vault.yml and replace placeholder values with your actual secrets
#
# 3. Encrypt the file with ansible-vault:
#    ansible-vault encrypt vault.yml
#
# 4. NEVER commit the unencrypted vault.yml to git!
#    The .gitignore should already exclude vault.yml
#
# =============================================================================

---
# Windows VM Credentials
vault_windows_admin_password: "REPLACE_WITH_SECURE_PASSWORD"

# OpenShift / Kubernetes
vault_openshift_token: "REPLACE_WITH_SERVICE_ACCOUNT_TOKEN"

# AAP Controller
vault_aap_password: "REPLACE_WITH_AAP_PASSWORD"

# EDA Controller
vault_eda_token: "REPLACE_WITH_EDA_TOKEN"

# S3 Storage (if using S3 backend for reports)
vault_s3_access_key: "REPLACE_WITH_S3_ACCESS_KEY"
vault_s3_secret_key: "REPLACE_WITH_S3_SECRET_KEY"
